                <input type="Subject" class="form-control" id="Subject" name="subject" area-describedby="subject" placeholder="Subject" required>
                <br>
                <textarea class="form-control" rows="25" id="message" name="textbox" required>Enter Message</textarea>
                <br>
                <button class="btn btn-primary" type="submit" name="submit">Send</button>
            </div>
        </form>
