                <input type="text" class="form-control" id="ContactName" name="fromName" aria-describedby="nameHelp" placeholder="Enter Full Name" required> 
                <br>
                <input type="email" class="form-control" id="ContactEmail" name="fromEmail" aria-describedby="emailHelp" placeholder="Enter email" required>
